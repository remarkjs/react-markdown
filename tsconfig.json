{
  "include": ["lib/**/*.js", "test/**/*.jsx", "test/**/*.js", "index.js"],
  "exclude": ["**/*.min.js"],
  "compilerOptions": {
    "target": "es2021",
    "lib": ["es2020", "dom"],
    "module": "node16",
    "jsx": "react",
    "checkJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "strict": true
  }
}
