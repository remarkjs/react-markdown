{
  "include": ["*.js", "src/**.js", "test/**.js"],
  "exclude": ["**/*.min.js"],
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["ES2015", "DOM"],
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strict": true
  }
}
